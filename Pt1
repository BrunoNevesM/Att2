<!DOCTYPE html >
< html  lang =" pt-br " >
< cabeça >
    < meta  charset =" UTF-8 " >
    < meta  name =" viewport " content =" width=largura-do-dispositivo, escala-inicial=1.0 " >
    < title > Contador de 1 a 15 </ title >
</ cabeça >
< corpo >
    < h1 > Contador </ h1 >
    < p  id =" contador " > 0 </ p >

    < roteiro >
        deixe  count  =  0 ;

        função  incrementarContador ( )  {
            contar ++ ;
            documento . getElementById ( "contador" ) . textContent  =  count ;

            se  ( contagem  ===  15 )  {
                clearInterval ( intervaloId ) ;
                alert ( "Contagem finalizada!" ) ;
            }
        }

        const  intervalId  =  setInterval ( incrementarContador ,  1000 ) ;  // Ajusta o intervalo em milissegundos (1000ms = 1 segundo)
    </ script >
</ corpo >
</ html >
